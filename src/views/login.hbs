<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- MDB CSS -->
  <link rel="stylesheet" href="/assets/css/mdb.min.css" />
  <link rel="stylesheet" href="/assets/css/master.css">
  <link rel="stylesheet" href="/assets/css/login.css">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" />
  <title>Login - SMK Krian 1</title>
</head>

<body>
  <header class="header">

  </header>
  <div class="container main-container">
    <div class="row mt-5">
      <div class="col-12 col-md-4 mx-auto card-container-col">
        <div class="card h-100 card-container">
          <div class="card-body">
            <h4 class="card-title text-center">Login Token</h4>
            <p class="card-text">
              <input type="text" class="form-control" placeholder="Masukkan Token" name="token" id="token" autofocus />
            </p>
          </div>
          <div class="card-footer">
            <a class="btn btn-block btn-add btn-action" onclick="login();">
              Login
            </a>
          </div>
        </div>
      </div>
    </div>

    <footer class="footer text-center">
      <div class="footer-text pt-3">
        <p>< /> with â™¥ by <a href="#">standinshd</a></p>
      </div>
    </footer>

  </div>

  <!-- Optional JavaScript -->
  <!-- jQuery first, then Popper.js, then MDB JS -->
  <script src="/assets/js/jquery-3.5.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
  <script src="/assets/js/mdb.min.js"></script>
  <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
  <script>
    function login() {
      const token = $("#token").val();
      $.ajax({
        url: "/loginToken",
        method: "POST",
        data: { token },
        success: function(res) {
          return console.log(res);
          if (!res.granted) location.reload();
          else location.href = "/";
        }
      });
    }
  </script>
</body>

</html>