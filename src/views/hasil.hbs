<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- MDB CSS -->
  <link rel="stylesheet" href="/assets/css/mdb.min.css" />
  <link rel="stylesheet" href="/assets/css/master.css" />
  <link rel="stylesheet" href="/assets/css/data.css" />
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" />
  <title>Kartu Pelajar</title>
</head>

<body>
  <header class="header">

  </header>
  <div class="container main-container">
    <div class="col-12">
      <div class="card card-container mb-5">
        <div class="card-header">
          <a href="#" id="back-btn" class="card-header-back"><i class="fas fa-arrow-left mr-2"></i><span
              class="card-header-text">KEMBALI</span></a>
        </div>
        <div class="card-body">
          <label>Ukuran :</label>
          <input type="range" class="custom-range" id="size" min="1" step="0.2" max="10" value="5" />
          <canvas id="viewport" width="757" height="475"></canvas>
        </div>
      </div>
    </div>
  </div>

  <footer class="footer text-center">
    <div class="footer-text pt-3">
      <p>
        < /> with â™¥ by <a href="#">standinshd</a></p>
    </div>
  </footer>
  <!-- Optional JavaScript -->
  <!-- jQuery first, then Popper.js, then MDB JS -->
  <script src="/assets/js/jquery-3.5.1.min.js"></script>
  <script src="/assets/js/jquery-barcode.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
  <script src="/assets/js/mdb.min.js"></script>
  <script src="/assets/js/JsBarcode.code128.min.js"></script>
  <script type="text/javascript">
    $(window).ready(function () {
      const pathname = location.pathname;
      const prevClass = pathname.slice(pathname.indexOf("/", 1) + 1, pathname.lastIndexOf("/")); // todo make back to previous class
      const backBtnElement = document.getElementById("back-btn").href = prevClass;
      let base_img = new Image();
      let biru = new Image();
      let stroke = new Image();
      let foto = new Image();
      let barcode = new Image();
      let drag = false;
      base_img.src = "/assets/img/new/depan.png";
      biru.src = "/assets/img/new/container.png";
      stroke.src = "/assets/img/stroke.png";
      // foto.src = "/uploads/{{kelas}}/{{data.foto}}";
      foto.src = "/uploads/all/IMG_{{data.foto}}.JPG";
      barcode.src = generateBarcode();
      let nama = "{{data.nama}}".toUpperCase();
      function generateBarcode(nisn) {
        const canvas = document.createElement("canvas");
        JsBarcode(canvas, "{{data.nisn}}", { format: "CODE128", height: 30, displayValue: false });
        return canvas.toDataURL("image/png");
      }
      function generate(c, posX = 0, posY = 0, photoWidth = foto.width, photoHeight = foto.height) {
        c.clearRect(0, 0, 757, 475);
        c.drawImage(base_img, 0, 0);
        // c.drawImage(stroke, 515, 67);
        // c.drawImage(biru, 521.5, 73.6);
        c.font = "bold 23pt Calibri";
        c.fillText(nama, 269, 210);
        c.font = "14pt Calibri";
        c.fillText(`{{data.nis}}/{{data.nisn}}`, 450, 235);
        c.fillText(`{{data.programKeahlian}}`, 450, 260);
        c.fillText(`{{data.komp_keahlian}}`, 450, 283);
        c.fillText(`{{data.ttl}}`, 450, 307);
        c.fillText(`{{data.alamat}}`, 450, 330);
        c.drawImage(barcode, 350, 400);
        c.save();
        c.fillStyle = "#46A5DC";
        c.beginPath();
        c.ellipse(150, 270, 100, 100, 0, 1, 100);
        c.strokeStyle = "white";
        c.lineWidth = 10;
        c.stroke();
        c.fill();
        c.clip();
        c.drawImage(foto, posX - (photoWidth * $("#size").val() / 10) / 2, posY - (photoHeight * $("#size").val() / 10) / 2, photoWidth * $("#size").val() / 10, photoHeight * $("#size").val() / 10);
      }
      const canvasBG = document.getElementById("viewport");
      let ctx = canvasBG.getContext("2d");
      
      base_img.onload = function () {
        generate(ctx);
      }
      $(window).mousedown(function () {
        if ($("#viewport:hover").length != 0) drag = true;
      });
      $(window).mouseup(function () {
        drag = false;
      });
      $(window).mousemove(function (ev) {
        if (drag) {
          mouseX = ev.offsetX;
          mouseY = ev.offsetY;
          generate(ctx, mouseX, mouseY);
        }
      });
    });
  </script>
</body>

</html>