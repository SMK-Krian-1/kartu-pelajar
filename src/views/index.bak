<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- MDB CSS -->
  <link rel="stylesheet" href="/assets/css/mdb.min.css" />
  <link rel="stylesheet" href="/assets/css/index.css">
  <link href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" rel="stylesheet" />
  <title>Form Isi Data</title>
</head>

<body>
  <div class="container">
    <div class="row">
      <div class="col-4">
        <div class="card h-100">
          <div class="card-body">
            <h4 class="card-title">Tambah Data Siswa</h4>
            <p class="card-text">Pilih menu ini jika data & foto siswa belum tersedia.</p>
          </div>
          <div class="card-footer">
            <a class="btn btn-block btn-primary" data-toggle="modal" data-target="#modalTambah">
              Tambah
            </a>
          </div>
        </div>
      </div>
      <div class="col-4">
        <div class="card h-100">
          <div class="card-body">
            <h4 class="card-title">Edit Data Siswa</h4>
            <p class="card-text">Pilih menu ini jika data & foto perlu untuk di validasi lebih lanjut
              Pilih menu ini jika data & foto perlu untuk di validasi lebih lanjut
            </p>
          </div>
          <div class="card-footer">
            <a class="btn btn-block btn-warning" data-toggle="modal" data-target="#modalValidasi">
              Validasi
            </a>
          </div>
        </div>
      </div>
      <div class="col-4">
        <div class="card h-100">
          <div class="card-body">
            <h4 class="card-title">Cetak Kartu Pelajar</h4>
            <p class="card-text">Pilih menu jika data & foto sudah siap untuk di cetak!</p>
          </div>
          <div class="card-footer">
            <a class="btn btn-block btn-danger" data-toggle="modal" data-target="#modalCetak">
              Cetak
            </a>
          </div>
        </div>
      </div>



      <!-- Modal Tambah -->
      <div class="modal fade" id="modalTambah" tabindex="-1">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Tambah Data</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <div class="row">
                <div class="col-12">
                  <div class="input-group mb-3">
                    <div class="input-group-text"><i class="fa fa-user"></i></div>
                    <input type="text" placeholder="Nama Lengkap" class="form-control" />
                    <div class="form-file">
                      <input type="file" class="form-file-input" id="foto" />
                      <label class="form-file-label" for="foto">
                        <span class="form-file-text">...</span>
                        <span class="form-file-button">Pilih Foto</span>
                      </label>
                    </div>
                  </div>
                  <div class="input-group mb-3">
                    <div class="input-group-text"><i class="fa fa-id-card"></i></div>
                    <input type="number" placeholder="NIS" class="form-control" />
                    <div class="input-group-text">/</div>
                    <input type="text" placeholder="Absen TU" class="form-control" />
                    <div class="input-group-text">-</div>
                    <input type="number" placeholder="NISN" class="form-control" />
                  </div>
                  <div class="input-group mb-3">
                    <div class="input-group-text"><i class="fas fa-cogs"></i></div>
                    <select class="form-control select-jurusan">
                      <option value="" disabled selected>- Pilih Jurusan -</option>
                      <option value="Teknik Pemesinan">Teknik Pemesinan</option>
                      <option value="Rekayasa Perangkat Lunak">Rekayasa Perangkat Lunak</option>
                      <option value="Teknik Pengelasan">Teknik Pengelasan</option>
                      <option value="Teknik Instalasi Tenaga Listrik">Teknik Instalasi Tenaga Listrik</option>
                    </select>
                  </div>
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">
                Close
              </button>
              <button type="button" class="btn btn-primary">Save changes</button>
            </div>
          </div>
        </div>
      </div>
      {{!-- ! Modal Tambah --}}

      <!-- Modal Validasi -->
      <div class="modal fade" id="modalValidasi" tabindex="-1">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Validasi Data</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              Validasi
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">
                Close
              </button>
              <button type="button" class="btn btn-primary">Save changes</button>
            </div>
          </div>
        </div>
      </div>
      {{!-- ! Modal Validasi --}}

      <!-- Modal Cetak -->
      <div class="modal fade" id="modalCetak" tabindex="-1">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              ...
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">
                Close
              </button>
              <button type="button" class="btn btn-primary">Save changes</button>
            </div>
          </div>
        </div>
      </div>
      {{!-- ! Modal Cetak --}}

    </div>
  </div>

  <!-- Optional JavaScript -->
  <!-- jQuery first, then Popper.js, then MDB JS -->
  <script src="/assets/js/jquery-3.5.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
  <script src="/assets/js/mdb.min.js"></script>
</body>

</html>